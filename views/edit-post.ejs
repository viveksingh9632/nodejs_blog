<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add post</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/save-post" method="post" id="add-form">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg"
                                placeholder="Enter name" value="<%= post.name  %>"  required>
                        </div>
                        <!-- Role Selection -->
                        
                        <div class="mb-3">
                            <label for="image">image</label>
                            <input type="file" name="image" class="form-control form-control-lg"
                                  required>
                        </div>
                        <div class="mb-3">
                            <label for="slug">slug</label>
                            <input type="text" name="slug" class="form-control form-control-lg"
                                placeholder="Enter slug"  value="<%= post.slug  %>"  required>
                        </div>
                        <div class="mb-3">
                            <label for="content">content</label>
                            <input type="text" name="content" class="form-control form-control-lg"
                                placeholder="Enter content"   value="<%= post.content  %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control form-control-lg"
                                placeholder="Enter password"  value="<%= post.password  %>" required>
                        </div>

                        <div class="mb-3 d-grid">
                            <input type="submit" slug="submit" value="Add post" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
