<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add Category</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/save-category" method="post" id="add-form">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter name" required>
                        </div>
                        <div class="mb-3">
                            <label for="slug">Slug</label>
                            <input type="text" name="slug" class="form-control" placeholder="Enter slug" required>
                        </div>
                        <div class="mb-3">
                            <label for="content">Content</label>
                            <input type="text" name="content" class="form-control" placeholder="Enter content" required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Category" class="btn btn-primary btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
