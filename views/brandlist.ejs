<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-light">
                            <th>Model</th>
                            <th>Description</th>
                            <th>Display</th>
                            <th>RamRom</th>
                            <th>Camera</th>
                            <th>Battery</th>
                            <th>Retail</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% brands.forEach(function(brand, index) { %>
                            <tr>
                                <td><%= brand.model %></td>
                                <td><%= brand.description%></td>
                                <td><%= brand.display %></td>
                                <td><%= brand.ramrom %></td>
                                <td><%= brand.camera %></td>
                                <td><%= brand.battery %></td>
                                <td><%= brand.retail %></td>
                                <td>
                                    <a href="/edit_brand/<%= brand._id %>" class="text-success" title="Edit">
                                        <i class="fas fa-edit fa-lg mx-1"></i>
                                    </a>
                                    <a href="/delete-brand/<%= brand._id %>" class="text-danger" title="Delete">
                                        <i class="fas fa-trash-alt fa-lg mx-1"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
